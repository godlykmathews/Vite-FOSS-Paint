{
  "name": "vite-foss-paint",
  "version": "1.0.0",
  "description": "A VITE FOSS paint application built with Electron",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "electron:dev": "vite build && electron main.js",
    "build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win",
    "build:linux": "vite build && electron-builder --linux",
    "build:mac": "vite build && electron-builder --mac",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.foss.fosspaint",
    "productName": "VITE FOSS PAINT",
    "directories": {
      "output": "dist_electron_builds"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Graphics"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.graphics-design"
    },
    "publish": {
      "provider": "github",
      "owner": "godlykmathews",
      "repo": "Vite-FOSS-Paint"
    }
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "vite": "^4.0.0"
  },
  "dependencies": {
    "lucide": "^0.562.0"
  }
}
